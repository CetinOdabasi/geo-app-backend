# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Database Configuration
# PostgreSQL with PostGIS - Veritabanı bağlantı URL'i
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/geo_db?schema=public"

# JWT Authorization
# JWT token imzalama anahtarı - üretim ortamında güçlü ve benzersiz bir değer olmalı
JWT_SECRET="your_jwt_secret_key_here"

# Environment
# Geliştirme veya üretim ortamı ("development" veya "production")
NODE_ENV="development"

# Mock Data (Optional)
# Veritabanı bağlantısı sağlanamadığında mock veri kullanmayı etkinleştir
USE_MOCK_DATA="true"

# API Configuration (Optional)
# API rate limiting değeri (dakika başına istek sayısı)
RATE_LIMIT="100"

# API Key Expiration (Optional)
# Varsayılan API anahtarı son kullanma süresi (gün olarak)
DEFAULT_API_KEY_EXPIRY_DAYS="30"

# Server Configuration
# API sunucusu portu
PORT="3000" 